{
    "name": "classgame",
    "version": "2.1.1",
    "description": "ClassGame - Local Network File Sharing for Education",
    "productName": "ClassGame",
    "author": "ClassGame Team",
    "main": "electron-main.js",
    "scripts": {
        "start": "electron-forge start",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "generate-icon": "node convert-icon.js",
        "server": "node index.js",
        "dev": "node --watch index.js",
        "test": "cmd /c \"set TEST_MODE=true && mocha tests/**/*.test.js --exit\""
    },
    "config": {
        "forge": {
            "packagerConfig": {
                "name": "ClassGame",
                "executableName": "ClassGame",
                "icon": "./assets/icon",
                "arch": [
                    "x64",
                    "ia32"
                ]
            },
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "ClassGame",
                        "setupIcon": "./assets/icon.ico",
                        "loadingGif": "./assets/loading.gif"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "win32"
                    ]
                },
                {
                    "name": "@pengx17/electron-forge-maker-appimage"
                }
            ]
        }
    },
    "keywords": [
        "education",
        "file-sharing",
        "local-network",
        "classroom"
    ],
    "license": "ISC",
    "type": "commonjs",
    "pkg": {
        "assets": [
            "public/**/*"
        ],
        "targets": [
            "node18-win-x64",
            "node18-win-x86"
        ]
    },
    "dependencies": {
        "bonjour-service": "^1.3.0",
        "cors": "^2.8.5",
        "electron-squirrel-startup": "^1.0.1",
        "express": "^5.1.0",
        "internal-ip": "^8.0.1",
        "node-forge": "^1.3.1",
        "socket.io": "^4.8.1"
    },
    "devDependencies": {
        "@electron-forge/cli": "^7.10.2",
        "@electron-forge/maker-squirrel": "^7.10.2",
        "@electron-forge/maker-zip": "^7.10.2",
        "@pengx17/electron-forge-maker-appimage": "^1.2.1",
        "chai": "^6.2.2",
        "electron": "^28.0.0",
        "mocha": "^11.7.5",
        "png-to-ico": "^3.0.1",
        "sharp": "^0.34.5",
        "socket.io-client": "^4.8.3"
    }
}